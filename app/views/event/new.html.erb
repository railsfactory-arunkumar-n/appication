<%= form_for :event, url: event_create_path do |f| %>
<div >
<%=f.label:event_name %>
<%=f.text_field:event_name%><br />
</div>
<div >
<div id="calender">
<%#=f.label:date %>
<%#=f.text_field:text%>
<input name="date" id="datepicker" type="text" />
<br />
</div>
</div>
<div >
<%=f.label:time %>
<%=f.text_field:time%><br />
</div>
<div >
<%=f.label:detail %>
<%=f.text_field:text%>
</div>
<%=f.submit "create" %>
<%end%>

<script type="text/javascript">
  $(document).ready(function(){

    $("#calender").click(function(){
			//alert("hai");
			$("#datepicker").datepicker();
		});
  });
</script>